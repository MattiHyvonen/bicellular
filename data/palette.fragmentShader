#version 330 core

//from image:
in vec2 UV;
uniform sampler2D tx;
uniform vec2[25] texelOffsets;

//from filter:
uniform sampler2D map;
uniform float[25] convolutionMatrix;
uniform float convolutionLevel;
uniform float dryLevel;

out vec3 outColor;


void main() {
    float value = (texture(tx, UV).r + 1) / 2;
    float outValue = 1 - value;
    outValue *= outValue;
    
    outColor = vec3(outValue, outValue, outValue);
}
